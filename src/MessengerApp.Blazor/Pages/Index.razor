@page "/"

@if (currentUser != null)
{
    <div>
        <p>Welcome, <b><i>@currentUser.UserName</i></b></p>
        <div id="contact-list">
            <Contacts User="@currentUser" ContactList="@contacts" SelectContact="@GetMessagesForContactById" />
            <div id="new-contact-panel">
                New Contact:<br />
                <input class="form-control" @bind="NewContact" /><br />
                <button type="button" class="btn btn-secondary" @onclick="@(e => AddContactOnClick(e))">Add Contact</button>
            </div>
        </div>
        @if (selectedContact != null)
        {
            <div id="chat-list">
                <Chat User="@currentUser" CurrentContact="@selectedContact" />
            </div>
        }
        else
        {
            <i>No conversations selected</i>
        }
    </div>
}
else
{
    <div>
        Username: <input class="form-control col-md-6" @bind="Username" /><br />
        <button type="button" class="btn btn-primary" @onclick="@(e => LoginUserOnClick(e))">Login</button>
    </div>
}
